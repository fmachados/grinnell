Package: grinnell
Type: Package
Title: Dispersal Simulations Based on Ecological Niches
Version: 0.0.22
Authors@R: c(
    person("Fernando", "Machado-Stredel", email = "f.machado.stredel@gmail.com", 
           role = c("aut","cre"), comment = c(ORCID = "0000-0002-8378-3172")),
